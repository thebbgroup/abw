                        <a href="{{ url_for('resource', res='bandtogether.pdf') }}" class="button">Download PDF</a>
                        <a href="{{ url_for('resource', res='bandtogether.pptx') }}" class="button">Download PowerPoint</a>
                    </li>
                </ul>
            </div>
        </section>
         <section class="resources-materials section" id="communication-materials">
            <div class="container">
                <ul class="resources-list">
                    <li>
                        <h5>BeatBullying Poster</h5>
